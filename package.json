{
  "name": "user-whisperer-platform",
  "version": "1.0.0",
  "description": "Autonomous AI-powered customer engagement platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "services/*",
    "sdk/*",
    "shared/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose down",
    "dev:clean": "docker-compose down -v && docker system prune -f",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test --workspaces --if-present",
    "test:integration": "node scripts/test-integration.js",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "keywords": [
    "ai",
    "machine-learning",
    "customer-engagement",
    "personalization",
    "automation"
  ],
  "author": "User Whisperer Team",
  "license": "PROPRIETARY"
} 